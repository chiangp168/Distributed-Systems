<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
  version="4.0">
  <servlet>
    <servlet-name>Servlet</servlet-name>
    <servlet-class>PostServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>Servlet</servlet-name>
    <url-pattern>/purchase/*</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>Top10SoldAtStore</servlet-name>
    <servlet-class>Top10SoldAtStore</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>Top10SoldAtStore</servlet-name>
    <url-pattern>/items/store/*</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>Top10StoresOfAItem</servlet-name>
    <servlet-class>Top10StoresOfAItem</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>Top10StoresOfAItem</servlet-name>
    <url-pattern>/items/top10/*</url-pattern>
  </servlet-mapping>
</web-app>